{
  "$schema": "./configSchema.json",

  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-margin-top": 12,
  "control-center-margin-bottom": 12,
  "control-center-margin-right": 12,
  "control-center-margin-left": 12,
  "notification-window-width": 450,
  "fit-to-screen": true,

  "timeout": 10,
  "timeout-low": 5,
  "timeout-critical": 0,

  "keyboard-shortcuts": true,

  "transition-time": 200,

  "hide-on-clear": false,
  "hide-on-action": true,

  "text-empty": "Notification log: empty",
  "widgets": ["buttons-grid", "title", "notifications"],
  "widget-config": {
    "title": {
      "text": "Notifications",
      "clear-all-button": true,
      "button-text": ""
    },
    "buttons-grid": {
      "buttons-per-row": 6,
      "actions": [
        {
          "label": "",
          "command": "notify-send -u low 'This is a cool dino-button' 'Because dinos are cool'"
        },
        {
          "label": "",
          "command": "~/.local/bin/theme-toggle"
        },
        {
          "label": "",
          "command": "codium --enable-features=UseOzonePlatform --ozone-platform=wayland"
        },
        {
          "label": "",
          "command": "protonvpn-app"
        },
        {
          "label": "",
          "command": "pidof hyprlock || hyprlock"
        },
        {
          "label": "",
          "command": "pidof wlogout || wlogout"
        }
      ]
    }
  }
}
